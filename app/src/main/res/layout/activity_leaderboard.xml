<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF8EF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="70dp"> <!-- Added margin to prevent content being hidden by button -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Candy Crush Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Candy Crush Scores"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#E91E63"
                android:gravity="center"
                android:layout_marginBottom="16dp"/>

            <TableLayout
                android:id="@+id/candyTable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/table_background"
                android:padding="8dp"
                android:stretchColumns="*">

                <!-- Header Row -->
                <TableRow
                    android:background="#E91E63"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Game"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Date"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Score"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"/>
                </TableRow>
            </TableLayout>

            <!-- 2048 Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2048 Scores"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#8F7B65"
                android:gravity="center"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"/>

            <TableLayout
                android:id="@+id/dosmilTable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/table_background"
                android:padding="8dp"
                android:stretchColumns="*">

                <!-- Header Row -->
                <TableRow
                    android:background="#8F7B65"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Game"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Date"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Score"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/atras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_margin="16dp"
        android:backgroundTint="#8F7B65"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:elevation="4dp"
        android:text="Return" />

</FrameLayout>